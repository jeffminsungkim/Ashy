{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "types": ["jasmine"],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "baseUrl": "./src",
     "paths": {
       "@ashy/app/*": ["app/*"],
       "@ashy/components/*": ["components/*"],
       "@ashy/core/*": ["core/*"],
       "@ashy/env": ["environments/environment"],
       "@ashy/mocks/*": ["mocks/*"],
       "@ashy/models/*": ["models/*"],
       "@ashy/pages/*": ["pages/*"],
       "@ashy/pipes/*": ["pipes/*"],
       "@ashy/services/*": ["providers/*"],
       "@ashy/shared/*": ["shared/*"],
     }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
