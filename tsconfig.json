{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "baseUrl": "./src",
     "paths": {
       "@ashy-app/*": ["app/*"],
       "@ashy-components/*": ["components/*"],
       "@ashy-core/*": ["core/*"],
       "@ashy-environments/*": ["environments/*"],
       "@ashy-mocks/*": ["mocks/*"],
       "@ashy-models/*": ["models/*"],
       "@ashy-pages/*": ["pages/*"],
       "@ashy-pipes/*": ["pipes/*"],
       "@ashy-services/*": ["providers/*"],
       "@ashy-shared/*": ["shared/shared.module"]
     }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
